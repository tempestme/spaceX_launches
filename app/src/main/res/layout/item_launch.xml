<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:minHeight="150dp"
    app:layout_insetEdge="bottom"
    app:cardElevation="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            app:cardCornerRadius="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            android:id="@+id/mainCard">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#b2ffb2">

                <TextView
                    android:id="@+id/detailRocketName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    tools:text="Falcon Heavy"
                    style="@style/Base.TextAppearance.AppCompat.Large"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    tools:text="Kennedy Space Historic launch complex 39 A"
                    android:layout_below="@id/detailRocketName"
                    android:id="@+id/detailLaunchSite"
                    android:gravity="center"
                    style="@style/TextAppearance.AppCompat.Medium"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/detailLaunchTime"
                    android:layout_below="@id/detailLaunchSite"
                    tools:text="06:02:2018"
                    style="@style/Base.TextAppearance.AppCompat.Medium"/>
            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <TextView
            android:layout_below="@id/mainCard"
            android:id="@+id/detailsTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="The launch was a success, and the side boosters landed simultaneously at adjacent ground pads. Drone ship landing of the central core failed. Final burn to heliocentric mars-earth orbit was successful after the second stage and payload passed through the Van Allen belts."
            android:ellipsize="end"
            android:maxLines="10"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            />

    </RelativeLayout>




</android.support.v7.widget.CardView>