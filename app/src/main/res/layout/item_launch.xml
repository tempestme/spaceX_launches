<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="5dp"
    app:cardCornerRadius="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:minHeight="150dp"
    app:layout_insetEdge="bottom"
    app:cardElevation="2dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:id="@+id/backGround"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:id="@+id/relativeLayout">

            <TextView
                android:fontFamily="sans-serif-black"
                android:id="@+id/detailRocketName"
                style="@style/Base.TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:shadowColor="@color/textOnPrimary"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_alignStart="@+id/detailLaunchSite"
                tools:text="Falcon Heavy" />

            <TextView
                android:textStyle="bold"
                android:fontFamily="sans-serif-thin"
                android:id="@+id/detailLaunchSite"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/detailRocketName"
                android:gravity="left"
                android:layout_marginLeft="8dp"
                android:shadowColor="@color/textOnPrimary"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:textColor="@color/textOnSecondary"
                tools:text="Launch site: CCAFS SLC 40" />

            <TextView
                android:textStyle="bold"
                android:fontFamily="sans-serif-thin"
                android:id="@+id/detailLaunchTime"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/detailRocketName"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:layout_marginRight="8dp"
                android:textColor="@color/textOnSecondary"
                android:shadowColor="@color/textOnPrimary"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                tools:text="06.02.2018" />
        </RelativeLayout>

        <TextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-thin"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/detailsTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:maxLines="10"
            android:shadowColor="@color/textOnPrimary"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:textColor="@color/textOnSecondary"
            tools:text="The launch was a success, and the side boosters landed simultaneously at adjacent ground pads. Drone ship landing of the central core failed. Final burn to heliocentric mars-earth orbit was successful after the second stage and payload passed through the Van Allen belts." />

    </RelativeLayout>




</android.support.v7.widget.CardView>