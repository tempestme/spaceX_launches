<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:elevation="2dp"
    app:cardElevation="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainLayout">
        <TextView
            style="@style/Base.TextAppearance.AppCompat.Large"            android:id="@+id/payloadType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Type: satellite"
            android:layout_marginLeft="8dp"
            android:layout_below="@id/payloadId"
            android:ellipsize="end"
            android:maxLines="10"
            android:shadowColor="@color/textOnPrimary"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:textColor="@color/textOnSecondary"
            android:textSize="16dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-thin"
            />

        <TextView

            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:id="@+id/payloadId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            tools:text="Id: Paz"
            android:layout_marginLeft="8dp"
            android:ellipsize="end"
            android:maxLines="10"
            android:shadowColor="@color/textOnPrimary"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:textColor="@color/textOnSecondary"
            android:textSize="16dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            />

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:id="@+id/payloadOrbit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/payloadType"
            android:layout_below="@+id/payloadType"
            android:ellipsize="end"
            android:fontFamily="sans-serif-thin"
            android:maxLines="10"
            android:shadowColor="@color/textOnPrimary"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:textColor="@color/textOnSecondary"
            android:textSize="16dp"
            android:textStyle="bold"
            tools:text="Orbit: Heliocentric orbit" />
    </RelativeLayout>

</android.support.v7.widget.CardView>