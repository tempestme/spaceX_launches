<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pavel.loadmore.view.DetailActivity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainCard">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#b2ffb2">

                <TextView
                    android:id="@+id/detailRocketName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    tools:text="Falcon Heavy"
                    style="@style/Base.TextAppearance.AppCompat.Large"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    tools:text="Kennedy Space Historic launch complex 39 A"
                    android:layout_below="@id/detailRocketName"
                    android:id="@+id/detailLaunchSite"
                    android:gravity="center"
                    style="@style/TextAppearance.AppCompat.Medium"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/detailLaunchTime"
                    android:layout_below="@id/detailLaunchSite"
                    tools:text="06:02:2018"
                    style="@style/Base.TextAppearance.AppCompat.Medium"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mainCard"
            android:id="@+id/detailDetails"
            android:layout_margin="5dp"
            tools:text="description of the launch, from which site it was launched, what rocket type it was, and other details, that can't be described in other fields"/>

        <RelativeLayout
            android:padding="1dp"
            android:layout_width="match_parent"
            android:id="@+id/sidecore1Layout"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_below="@id/detailDetails"
            android:background="@color/black">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="left"
                android:gravity="center"
                android:text="side core 1"
                style="medi"
                android:textColor="@color/lightGrey"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:gravity="center"
                tools:text="landed"
                android:background="@color/succeeded"
                android:id="@+id/detailCore1"
                android:textColor="@color/black"/>

        </RelativeLayout>
        <RelativeLayout
            android:padding="1dp"
            android:id="@+id/sidecore2Layout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_below="@id/sidecore1Layout"
            android:background="@color/black">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="left"
                android:gravity="center"
                android:text="side core 2"
                android:textColor="@color/lightGrey"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:gravity="center"
                tools:text="landed"
                android:background="@color/succeeded"
                android:id="@+id/detailCore2"
                android:textColor="@color/black"/>

        </RelativeLayout>


        <RelativeLayout
            android:padding="1dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:id="@+id/coreLayout"
            android:layout_below="@id/sidecore2Layout"
            android:background="@color/black">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="left"
                android:gravity="center"
                android:text="core"
                android:textColor="@color/lightGrey"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:gravity="center"
                tools:text="landed"
                android:background="@color/succeeded"
                android:id="@+id/detailCore"
                android:textColor="@color/black"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/payloadsTv"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coreLayout"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="payloads" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/payloadsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/payloadsTv">
        </android.support.v7.widget.RecyclerView>

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/payloadsList"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="links"
            android:id="@+id/linksTv"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_below="@id/linksTv"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/articleLink"
                android:text="articleLink"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/pressLink"
                android:text="presskit"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/redditLink"
                android:text="reddit"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/redditLink2"
                android:text="reddit2"/>

        </LinearLayout>



    </RelativeLayout>
</ScrollView>